<p id="notice"><%= notice %></p>

<h1>Listing Aliquots</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aliquots.each do |aliquot| %>
      <tr>
        <td><%= link_to 'Show', aliquot %></td>
        <td><%= link_to 'Edit', edit_aliquot_path(aliquot) %></td>
        <td><%= link_to 'Destroy', aliquot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

