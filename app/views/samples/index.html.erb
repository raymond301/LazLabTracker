<p id="notice"><%= notice %></p>

<h1>Listing Samples</h1>

<table>
  <thead>
    <tr>
      <th>Study name</th>
      <th>Rlims</th>
      <th>Family</th>
      <th>Sample type</th>
      <th>Treatments</th>
      <th>Preparation</th>
      <th>Patient initials</th>
      <th>Full name</th>
      <th>Birth date</th>
      <th>Collection date</th>
      <th>Create date</th>
      <th>Visit description</th>
      <th>Source</th>
      <th>Notes</th>
      <th>Tissue tumor flag</th>
      <th>Tissue normal flag</th>
      <th>Tissue abnormal flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= sample.study_name %></td>
        <td><%= sample.rlims_id %></td>
        <td><%= sample.family_id %></td>
        <td><%= sample.sample_type %></td>
        <td><%= sample.treatments %></td>
        <td><%= sample.preparation %></td>
        <td><%= sample.patient_initials %></td>
        <td><%= sample.full_name %></td>
        <td><%= sample.birth_date %></td>
        <td><%= sample.collection_date %></td>
        <td><%= sample.create_date %></td>
        <td><%= sample.visit_description %></td>
        <td><%= sample.source %></td>
        <td><%= sample.notes %></td>
        <td><%= sample.tissue_tumor_flag %></td>
        <td><%= sample.tissue_normal_flag %></td>
        <td><%= sample.tissue_abnormal_flag %></td>
        <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

